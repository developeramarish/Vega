@model RegisterViewModel

<h1>@ViewData["title"]</h1>

<form asp-action="register" method="post">
    
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input
            type="text"
            class="form-control"
            asp-for="@Model.Name" />

            <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input
            type="text"
            class="form-control"
            asp-for="@Model.Email" />

            <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input
            type="text"
            class="form-control"
            asp-for="@Model.Password" />

            <span class="text-danger" asp-validation-for="@Model.Password"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input
            type="text"
            class="form-control"
            asp-for="@Model.ConfirmPassword" />

            <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>